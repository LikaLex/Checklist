<% if user_signed_in? %>
<% @items.each do |item| %>
    <h2><%= item.title%></h2>
    <%= link_to 'View item', item_path(item) %>

       <p> <%= link_to 'Mark as completed', complete_item_path(item), method: :patch  %></p>
        <p><%= link_to 'Delete', item, method: :delete, data: { confirm: "Are you sure?" } %></p>
<% end %>

<%= link_to 'New item', new_item_path%>

    <% else %>

    <%= render 'layouts/static_landing_page'  %>
<% end %>